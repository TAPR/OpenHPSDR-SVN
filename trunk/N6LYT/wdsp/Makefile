all: $(PROGRAM) $(HEADERS) $(SOURCES) $(JAVA_PROGRAM) $(JAVA_HEADERS) $(JAVA_SOURCES)

java: $(JAVA_PROGRAM) $(JAVA_HEADERS) $(JAVA_SOURCES)

$(PROGRAM): $(OBJS)
	$(LINK) -shared -z noexecstack -o $(PROGRAM) $(OBJS) $(LIBS)

$(JAVA_PROGRAM): $(JAVA_OBJS)
	$(LINK) -shared -z noexecstack -o $(JAVA_PROGRAM) $(JAVA_OBJS) $(JAVA_LIBS)

.c.o:
	$(COMPILE) $(OPTIONS) -c -o $@ $<

install: $(PROGRAM)
	cp $(PROGRAM) /usr/local/lib
	cp $(JAVA_PROGRAM) /usr/local/lib

clean:
	-rm -f *.o
	-rm -f $(PROGRAM)
	-rm -f $(JAVA_PROGRAM)

