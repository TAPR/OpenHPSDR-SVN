<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TransverterAddActivity" >
    
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewName" />

    <EditText
        android:id="@+id/editTextStart"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextName"
        android:layout_toRightOf="@+id/textViewStart"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextEnd"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextStart"
        android:layout_toRightOf="@+id/textViewEnd"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextIF"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEnd"
        android:layout_toRightOf="@+id/textViewIF"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewIF"
        android:text="Add Transverter" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextName"
        android:layout_alignBottom="@+id/editTextName"
        android:layout_alignLeft="@+id/textViewStart"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextStart"
        android:layout_alignBottom="@+id/editTextStart"
        android:layout_alignLeft="@+id/textViewEnd"
        android:text="Start Frequency (Hz)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextEnd"
        android:layout_alignBottom="@+id/editTextEnd"
        android:layout_alignLeft="@+id/textViewIF"
        android:text="End Frequency (Hz)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewIF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextIF"
        android:layout_alignBottom="@+id/editTextIF"
        android:layout_alignLeft="@+id/button1"
        android:text="Osc Frequency (Hz)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout><!-- From: file:/home/john/AndroidstudioProjects/HPSDR-WDSP/app/src/main/res/layout/activity_transverter_add.xml -->