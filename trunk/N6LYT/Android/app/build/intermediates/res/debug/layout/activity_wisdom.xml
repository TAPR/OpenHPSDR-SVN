<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.g0orx.openhpsdr.WisdomActivity">

    <TextView android:text="Create FFTW3 Wisdom file (up to buffer sizes 262144).\n\nThis can take several minutes depending on the performance of the Android device you are running on.\n\nIt has been known to take up to 1 hour on older Android devices.\n\nIf you hit the back button the application can run without any Wisdom file but it may affect performance." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Wisdom File"
        android:id="@+id/buttonCreate"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView android:text=" "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textViewFiller"
        android:layout_below="@+id/buttonCreate"
        android:layout_centerHorizontal="true" />

    <TextView android:text=""
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textViewStatus"
        android:layout_below="@+id/textViewFiller"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
