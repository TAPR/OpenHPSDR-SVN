<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_cw"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="11"
        tools:context=".CWActivity">

        <TextView
            android:id="@+id/textViewInternal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Internal: " />

        <Switch
            android:id="@+id/switchInternal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:checked="false" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Mode: " />

        <RadioGroup
            android:id="@+id/radioGroupMode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonStraight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onRadioButtonModeClicked"
                android:text="Straight" />

            <RadioButton
                android:id="@+id/radioButtonModeA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="onRadioButtonModeClicked"
                android:text="Mode A" />

            <RadioButton
                android:id="@+id/radioButtonModeB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:onClick="onRadioButtonModeClicked"
                android:text="Mode B" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Speed (wpm): " />

        <org.g0orx.openhpsdr.NumberPicker
            android:id="@+id/numberPickerSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/textViewKeysReversed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Keys Reversed: " />

        <CheckBox
            android:id="@+id/checkBoxKeysReversed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:checked="false" />

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Weight: " />

        <org.g0orx.openhpsdr.NumberPicker
            android:id="@+id/numberPickerWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:orientation="horizontal" />


        <TextView
            android:id="@+id/textViewPTTDelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:text="PTT Delay (ms): " />

        <org.g0orx.openhpsdr.NumberPicker
            android:id="@+id/numberPickerPTTDelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:orientation="horizontal" />


        <TextView
            android:id="@+id/textViewHangTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="Hang Time (ms): " />

        <org.g0orx.openhpsdr.NumberPicker
            android:id="@+id/numberPickerHangTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:orientation="horizontal" />


        <TextView
            android:id="@+id/textViewSpacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:text="Spacing: " />

        <CheckBox
            android:id="@+id/checkBoxSpacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="7"
            android:checked="false" />


        <TextView
            android:id="@+id/textViewSidetoneVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:text="Sidetone Volume: " />

        <org.g0orx.openhpsdr.NumberPicker
            android:id="@+id/numberPickerSidetoneVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="8"
            android:orientation="horizontal" />


        <TextView
            android:id="@+id/textViewSidetoneFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9"
            android:text="Sidetone Frequency (Hz): " />

        <org.g0orx.openhpsdr.NumberPicker
            android:id="@+id/numberPickerSidetoneFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="9"
            android:orientation="horizontal" />

    </GridLayout>

</ScrollView><!-- From: file:/home/john/AndroidstudioProjects/HPSDR-WDSP/app/src/main/res/layout/activity_cw.xml -->